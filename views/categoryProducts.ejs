<%- include ('partials/header') %>

<div class="row products p">
    <% if (count > 0) { %>
        <% products.forEach(product => { %>
            <div class="col-xs-12 col-md-4">
            <div class="custom-bg">
                <a class="pa" href="/products/<%= product.category %>/<%= product.slug %>">
                    <img class="pimage" src="/img/products/<%= product.image %>" alt="<%= product.title %>">
                </a>
                <h3><%= product.title %></h3>
                <h4>$<%= parseFloat(product.price).toFixed(2) %></h4>
                <a class="vd custom-a" href="/products/<%= product.category %>/<%= product.slug %>">View Details</a>
                </div>
            </div>
        <% }); %>
    <% } else { %>
        <h3>No products found!</h3>
    <% } %>
</div>

<%- include ('partials/footer') %>