<%- include ('../partials/adminHeader') %>

<h2 class="page-title">Products</h2>
<a href="/admin/products/add-product" class="btn btn-primary custom-btn"
  >Add a new product</a
>
<br /><br />

<% if (count > 0) { %>
<table class="table table-striped alignmiddle">
  <thead>
    <tr class="home">
      <th>Product</th>
      <th>Price</th>
      <th>Category</th>
      <th>Product Image</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <% products.forEach(product => { %>
    <tr>
      <td><%= product.title %></td>
      <td><%= parseFloat(product.price).toFixed(2) %></td>
      <td><%= product.category %></td>
      <td>
        <img id="noimage" src="/img/products/<%= product.image %>" />
      </td>
      <td>
        <a
          class="custom-a"
          href="/admin/products/edit-product/<%= product._id %>"
          >Edit</a
        >
      </td>
      <!-- <td><a class="confirmDeletion" href="/admin/products/delete-product/<%= product._id %>">Delete</a></td> -->
      <td>
        <a
          id="delete-product"
          class="confirmDeletion custom-delete"
          data-product-id="<%= product._id %>"
          >Delete</a
        >
      </td>
    </tr>
    <% }); %>
  </tbody>
</table>
<% } else { %>
<h3 class="text-center">There are no products.</h3>
<% } %>
